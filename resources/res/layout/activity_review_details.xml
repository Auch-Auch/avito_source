<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/review_details_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="?attr/actionBarSize" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/reject_card" android:background="@drawable/bg_declined_review_reply" android:padding="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="8dp" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding">
                <TextView android:id="@+id/reject_card_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/review_details_reject_reason" style="?attr/textLegacy2_headingSmall"/>
                <TextView android:id="@+id/reject_message" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/textLegacy1_subheading"/>
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/avatar" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginTop="8dp" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" app:actualImageScaleType="6" app:backgroundImage="?attr/gray8" app:placeholderImage="?attr/gray8" app:placeholderImageScaleType="4" app:roundAsCircle="true"/>
            <TextView android:textSize="20sp" android:ellipsize="end" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy1_titleBold"/>
            <TextView android:textSize="16sp" android:textColor="?attr/gray48" android:id="@+id/item" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding"/>
            <LinearLayout android:gravity="center_vertical" android:paddingTop="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding">
                <com.avito.android.lib.design.rating.RatingBar android:id="@+id/rating" android:layout_marginTop="1dp" android:layout_marginRight="5dp" style="@style/res_2132017902_design_widget_avito_rating_small"/>
                <TextView android:textColor="?attr/gray48" android:gravity="center_vertical" android:id="@+id/stage_title" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?attr/textLegacy1_subheading"/>
            </LinearLayout>
            <TextView android:id="@+id/message_status_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy2_headingSmall"/>
            <TextView android:gravity="center_vertical" android:id="@+id/message" android:paddingTop="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy1_subheading"/>
            <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/images" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="6dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <TextView android:textColor="?attr/gray48" android:id="@+id/publication_date" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy2_body"/>
            <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" layout="@layout/review_details_reply"/>
            <FrameLayout android:paddingTop="24dp" android:paddingBottom="@dimen/standard_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding">
                <com.avito.android.lib.design.button.Button android:layout_gravity="bottom" android:id="@+id/action_button" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/buttonDefaultLarge"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
