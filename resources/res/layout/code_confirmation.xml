<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/code_confirmation_screen_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/content_container" android:paddingTop="?attr/actionBarSize" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                <include android:id="@+id/code_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" layout="@layout/screen_edit_text_single_line"/>
                <include android:id="@+id/code_label" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/screen_info_label"/>
                <include android:id="@+id/text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_horizontal_padding" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/content_horizontal_padding" android:layout_marginBottom="6dp" layout="@layout/text_subheading"/>
                <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/content_horizontal_padding" android:paddingRight="@dimen/content_horizontal_padding" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/FlexibleButtonsContainer">
                    <ViewAnimator android:id="@+id/request" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
                        <include android:layout_gravity="center" android:id="@+id/request_text" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/text_subheading_grey"/>
                        <include android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/request_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-4dp" android:layout_marginRight="-4dp" layout="@layout/button_flat_primary"/>
                    </ViewAnimator>
                    <include android:id="@+id/send_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="-4dp" android:layout_marginRight="-4dp" layout="@layout/button_primary"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <include android:id="@+id/progress_view" android:paddingTop="?attr/actionBarSize" layout="@layout/semitransparent_progress"/>
    </FrameLayout>
    <include layout="@layout/appbar"/>
</FrameLayout>
