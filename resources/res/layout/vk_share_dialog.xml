<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
    <View android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="0dp"/>
    <RelativeLayout android:id="@+id/topBarLayout" android:background="@color/vk_share_top_blue_color" android:layout_width="match_parent" android:layout_height="@dimen/vk_share_top_panel_height">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toStartOf="@+id/sendButtonLayout" android:layout_alignParentStart="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_ab_app" android:scaleType="fitCenter" android:contentDescription="@string/vk_name" android:layout_marginStart="@dimen/vk_share_top_image_margin"/>
            <TextView android:textSize="@dimen/vk_share_title_text_size" android:textColor="@color/vk_white" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/vk_share" android:layout_marginStart="@dimen/vk_share_top_title_margin"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/sendButtonLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true">
            <View android:background="#ffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_margin="@dimen/vk_share_top_line_margin"/>
            <ProgressBar android:id="@+id/sendProgress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:indeterminate="true"/>
            <Button android:textSize="@dimen/vk_share_send_text_size" android:textStyle="bold" android:textColor="@color/vk_white" android:id="@+id/sendButton" android:background="@drawable/vk_share_send_button_background" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/vk_send" android:drawablePadding="3dp" android:textAllCaps="true" android:drawableStart="@drawable/ic_ab_done" android:paddingStart="@dimen/vk_share_top_button_padding_left" android:paddingEnd="@dimen/vk_share_top_button_padding_right"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/topBarLayout">
        <ScrollView android:background="@color/vk_white" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:id="@+id/postContentLayout" android:paddingLeft="@dimen/vk_share_dialog_padding" android:paddingTop="@dimen/vk_share_dialog_padding_top" android:paddingRight="@dimen/vk_share_dialog_padding" android:paddingBottom="@dimen/vk_share_dialog_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/vk_share_title_text_size" android:textColor="@color/vk_black" android:textColorHint="@color/vk_share_link_color" android:id="@+id/shareText" android:background="@color/vk_clear" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/vk_new_message_text" android:inputType="text|textCapSentences|textMultiLine"/>
                <HorizontalScrollView android:id="@+id/imagesScrollView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/vk_share_dialog_padding">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/imagesContainer" android:layout_width="wrap_content" android:layout_height="match_parent"/>
                </HorizontalScrollView>
                <LinearLayout android:orientation="vertical" android:id="@+id/attachmentLinkLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/vk_share_top_image_margin" android:layout_marginBottom="@dimen/vk_share_link_top_margin">
                    <TextView android:textSize="@dimen/vk_share_title_link_title_size" android:textColor="@color/vk_share_link_title_color" android:ellipsize="end" android:id="@+id/linkTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1"/>
                    <TextView android:textSize="@dimen/vk_share_title_link_host_size" android:textColor="@color/vk_share_link_color" android:ellipsize="end" android:id="@+id/linkHost" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-1dp" android:lines="1"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:orientation="vertical" android:id="@+id/postSettingsLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/vk_share_settings_button_min_height">
            <View android:background="@color/vk_share_gray_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/vk_share_dialog_padding" android:layout_marginRight="@dimen/vk_share_dialog_padding"/>
            <Button android:textColor="@color/vk_share_blue_color" android:background="@drawable/vk_share_send_button_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/vk_new_post_settings"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
