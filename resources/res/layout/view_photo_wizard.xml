<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/photo_wizard" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/app_bar" android:layout_width="match_parent" android:layout_height="52dp" android:layout_alignParentTop="true">
        <ImageButton android:layout_gravity="start" android:id="@+id/close_button" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/ic_close_24_black" android:layout_marginStart="8dp" style="@style/res_2132018724_widget_avito_button_flat_gray"/>
        <TextView android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="48dp" android:layout_marginEnd="48dp" style="?attr/textLegacy2_bodyHeavy"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="180dp" android:layout_below="@+id/app_bar" android:layout_alignParentBottom="true">
        <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/preview_container" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.avito.android.photo_picker.camera.CameraAnimationCanvas android:id="@+id/cameraAnimationCanvas" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextureView android:id="@+id/texture" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </com.avito.android.photo_picker.camera.CameraAnimationCanvas>
            <ImageView android:id="@+id/mask" android:padding="@dimen/verification_mask_padding" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/mask_sts_front"/>
            <TextView android:textColor="?attr/constantWhite" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp" style="?attr/textLegacy2_bodyHeavy"/>
        </FrameLayout>
        <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/taken_photo_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:foreground="@drawable/fg_taken_photo_fade">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/taken_photo" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/photo_controls" android:paddingBottom="24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:paddingStart="18dp" android:paddingEnd="18dp">
        <com.avito.android.lib.design.button.Button android:id="@+id/primary_button" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginBottom="10dp" app:layout_shadowEnabled="true" style="?attr/buttonPrimaryMedium"/>
        <com.avito.android.lib.design.button.Button android:id="@+id/secondary_button" android:layout_width="match_parent" android:layout_height="36dp" android:text="@string/action_retake" app:layout_shadowEnabled="true" style="?attr/buttonSecondaryMedium"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/toggles_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="106dp" android:layout_alignParentBottom="true"/>
    <FrameLayout android:id="@+id/preview_controls" android:layout_width="match_parent" android:layout_height="106dp" android:layout_alignParentBottom="true">
        <ImageView android:layout_gravity="center" android:id="@+id/take_photo_button" android:focusable="true" android:clickable="true" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="21dp" android:layout_marginBottom="21dp" android:src="@drawable/btn_take_shot"/>
        <ImageButton android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/flash_button" android:background="@drawable/bg_selectable_gray_oval" android:visibility="gone" android:layout_width="37dp" android:layout_height="37dp" android:src="@drawable/ic_light_off" android:layout_marginEnd="71dp"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/error_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textColor="?attr/black" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/error_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="84dp" android:text="@string/loading_error_message" android:layout_marginStart="44dp" android:layout_marginEnd="44dp" style="?attr/textLegacy2_body"/>
        <com.avito.android.lib.design.button.Button android:layout_gravity="bottom" android:id="@+id/retry_button" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginBottom="24dp" android:text="@string/action_retry" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_shadowEnabled="true" style="?attr/buttonSecondaryMedium"/>
    </FrameLayout>
    <com.avito.android.lib.design.spinner.Spinner android:id="@+id/loading" android:visibility="gone" android:layout_width="27dp" android:layout_height="27dp" android:layout_marginBottom="76dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?attr/spinnerDarkLarge"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/permission_container" android:background="?attr/white" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/app_bar">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="?attr/img_noCamera"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/no_access" style="@style/res_2132018860_widget_avito_textview_title_camera"/>
        <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:layout_marginTop="6dp" android:layout_marginRight="48dp" android:text="@string/allow_access_message" style="@style/res_2132018859_widget_avito_textview_text_camera"/>
        <Button android:textSize="12sp" android:textColor="?attr/blue" android:id="@+id/btn_allow_access" android:background="@drawable/btn_transparent_blue_rounded_states" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginTop="4dp" android:text="@string/allow_access" android:textAllCaps="true" app:fontFamily="@font/avito_bold"/>
    </LinearLayout>
</RelativeLayout>
