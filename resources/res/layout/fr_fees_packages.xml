<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <FrameLayout style="@style/ContentHolder">
        <ScrollView android:id="@+id/content_view" android:background="?attr/oldBackground" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/content_horizontal_padding" android:paddingTop="8dp" android:paddingRight="@dimen/content_horizontal_padding" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="3dp" style="@style/AvitoCardView">
                    <TextView android:textSize="14sp" android:textColor="?attr/black" android:id="@+id/message" android:paddingLeft="16dp" android:paddingTop="22dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" app:fontFamily="@font/avito_regular"/>
                </androidx.cardview.widget.CardView>
                <TextView android:textSize="16sp" android:textColor="?attr/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/card_padding" android:layout_marginTop="@dimen/card_child_vertical_margin" android:layout_marginRight="@dimen/card_padding" android:layout_marginBottom="11dp" android:text="@string/fees_available_packages" app:fontFamily="@font/avito_bold"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/packages_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
