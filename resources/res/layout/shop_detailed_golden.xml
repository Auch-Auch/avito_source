<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/shop_gold_container" android:background="?attr/white" android:layout_width="match_parent" android:layout_height="wrap_content">
