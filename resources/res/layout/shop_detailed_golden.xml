                <TextView android:textColor="?attr/black" android:id="@+id/rating_number" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="4dp" style="?attr/textLegacy3_headingSmallBold"/>
