<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="49dp">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/user_avatar" android:layout_width="49dp" android:layout_height="49dp" android:layout_marginStart="14dp" app:actualImageScaleType="6" app:backgroundImage="?attr/gray8" app:placeholderImage="@drawable/ic_user_16_gray" app:placeholderImageScaleType="4" app:roundAsCircle="true"/>
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center_vertical" android:id="@+id/shop_avatar" android:layout_width="47dp" android:layout_height="35dp" android:layout_marginStart="@dimen/standard_padding" app:actualImageScaleType="2" app:backgroundImage="?attr/gray8" app:placeholderImage="@drawable/ic_shop_16_gray" app:placeholderImageScaleType="4" app:roundedCornerRadius="3dp"/>
