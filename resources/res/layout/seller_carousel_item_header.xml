        <TextView android:ellipsize="end" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="?attr/textLegacy2_bodySmall"/>
    </LinearLayout>
</LinearLayout>
