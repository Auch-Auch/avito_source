<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/info_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="?attr/actionBarSize">
        <TextView android:textAppearance="?attr/textHeadingLarge" android:textColor="?attr/gray48" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:paddingStart="@dimen/standard_padding" android:paddingEnd="@dimen/standard_padding"/>
