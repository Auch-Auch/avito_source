<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rating_details_comment_item" android:paddingLeft="@dimen/screen_component_horizontal_padding" android:paddingTop="16dp" android:paddingRight="@dimen/screen_component_horizontal_padding" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_published_review" android:paddingTop="26dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp">
        <TextView android:textSize="20sp" android:ellipsize="end" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy1_titleBold"/>
        <TextView android:textSize="16sp" android:textColor="?attr/gray48" android:id="@+id/item" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding"/>
        <LinearLayout android:gravity="center_vertical" android:paddingTop="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding">
            <com.avito.android.lib.design.rating.RatingBar android:id="@+id/rating" android:background="?attr/gray4" android:layout_marginTop="1dp" android:layout_marginRight="5dp" style="@style/res_2132017902_design_widget_avito_rating_small"/>
            <TextView android:textColor="?attr/gray48" android:gravity="center_vertical" android:id="@+id/stage_title" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?attr/textLegacy1_subheading"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/message" android:paddingTop="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="@integer/review_max_lines" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy1_subheading"/>
        <TextView android:textColor="?attr/blue" android:gravity="center_vertical" android:id="@+id/expand_message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/review_read_full_message" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy1_subheading"/>
        <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/images" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="4dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <Space android:id="@+id/publication_date_space" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textColor="?attr/gray48" android:id="@+id/publication_date" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding" style="?attr/textLegacy2_body"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/reply_container" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_padding" android:layout_marginEnd="@dimen/standard_padding">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/reply_user_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/reply_user_avatar" android:layout_width="24dp" android:layout_height="24dp" app:actualImageScaleType="6" app:backgroundImage="?attr/gray8" app:placeholderImage="?attr/gray8" app:placeholderImageScaleType="4" app:roundAsCircle="true"/>
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/reply_shop_avatar" android:layout_width="30dp" android:layout_height="20dp" app:actualImageScaleType="6" app:backgroundImage="?attr/gray8" app:placeholderImage="@drawable/ic_shop_30_20_gray" app:placeholderImageScaleType="4" app:roundedCornerRadius="2dp"/>
                <TextView android:ellipsize="end" android:id="@+id/reply_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:maxLines="1" style="?attr/textLegacy3_headingSmall"/>
            </LinearLayout>
            <TextView android:id="@+id/reply_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" style="?attr/textLegacy1_subheading"/>
            <TextView android:textColor="?attr/gray48" android:id="@+id/reply_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" style="?attr/textLegacy2_body"/>
        </LinearLayout>
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/avatar" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="16dp" app:actualImageScaleType="6" app:backgroundImage="?attr/gray8" app:placeholderImage="?attr/gray8" app:placeholderImageScaleType="4" app:roundAsCircle="true"/>
</FrameLayout>
