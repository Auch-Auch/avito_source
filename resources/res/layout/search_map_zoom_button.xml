<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/avito_white" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/zoomIn" android:background="?android:attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginTop="18dp" app:srcCompat="@drawable/ic_zoom_in"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/zoomOut" android:background="?android:attr/selectableItemBackground" android:paddingBottom="14dp" android:focusable="true" android:clickable="true" android:layout_width="44dp" android:layout_height="44dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="18dp" android:layout_height="2dp" android:layout_marginTop="18dp" android:layout_marginBottom="24dp" app:srcCompat="@drawable/ic_zoom_out"/>
        </FrameLayout>
    </LinearLayout>
</merge>
