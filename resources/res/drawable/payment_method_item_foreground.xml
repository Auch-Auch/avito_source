<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/avito_blue_alpha_24"/>
    </item>
    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/avito_blue_50"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/avito_transparent_black"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
