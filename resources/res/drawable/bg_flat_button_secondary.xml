<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/avito_blue_alpha_24">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/avito_black"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/avito_transparent_black"/>
            <stroke android:width="1dp" android:color="@color/avito_blue"/>
        </shape>
    </item>
</layer-list>
