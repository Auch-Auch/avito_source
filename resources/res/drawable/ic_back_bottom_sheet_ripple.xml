        <shape android:shape="rectangle">
            <solid android:color="?attr/white"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:height="24dp" android:width="24dp" android:left="2dp" android:top="2dp">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/ic_back_bottom_sheet_gray"/>
            <item android:drawable="@drawable/ic_back_bottom_sheet_black"/>
        </selector>
    </item>
</ripple>
