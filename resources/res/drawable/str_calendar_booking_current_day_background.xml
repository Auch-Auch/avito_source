<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/avito_blue_alpha_24"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/avito_blue_alpha_8"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/calendar_recycler_view_day_size" android:width="@dimen/calendar_recycler_view_day_size"/>
            <solid android:color="?attr/white"/>
            <stroke android:width="1dp" android:color="?attr/gray44"/>
        </shape>
    </item>
</selector>
