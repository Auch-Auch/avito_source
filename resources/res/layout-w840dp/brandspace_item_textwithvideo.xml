<?xml version="1.0" encoding="utf-8"?>
<com.avito.android.design.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/brandspace_content_horizontal_padding" android:layout_marginTop="@dimen/brandspace_module_padding_top" android:layout_marginRight="@dimen/brandspace_content_horizontal_padding">
    <LinearLayout android:orientation="vertical" android:id="@+id/text_container" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textAppearance="?attr/textHeadingLarge" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/brandspace_textwithvideo_title_margin_bottom"/>
        <include layout="@layout/brandspace_item_offer_textbase"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/image_container" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="@drawable/fg_rds_card" android:layout_weight="1">
        <com.avito.android.util.SimpleDraweeView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="wrap_content" app:actualImageScaleType="6" style="@style/BrandspaceImage"/>
        <ImageView android:layout_gravity="center" android:id="@+id/play_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/brandspace_video_review_icon"/>
    </FrameLayout>
</com.avito.android.design.widget.ForegroundLinearLayout>
